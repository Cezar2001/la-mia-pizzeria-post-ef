@model la_mia_pizzeria_static.Models.Pizza;
@{
    ViewData["Title"] = "Crea Pizza";
    ViewBag.TitoloPagina = "Creazione Pizza Buonissima";
}

@using (Html.BeginForm("CreaSchedaPizza", "Pizza", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   @Html.ValidationSummary()
    <table cellpadding="0" cellspacing="0" class="center">
        <tr>
            <th colspan="2" align="center">Pizza Details</th>
        </tr>
        <tr>
            <td>Pizza Id: </td>
            <td>
                @Html.TextBoxFor(m => m.Id)
            </td>
        </tr>
        <tr>
            <td>Nome: </td>
            <td>
                @Html.TextBoxFor(m => m.Nome)
                @Html.ValidationMessage("Nome")
            </td>
        </tr>
        <tr>
            <td>Descrizione: </td>
            <td>
                @Html.TextBoxFor(m => m.Descrizione)
                @Html.ValidationMessage("Descrizione")
            </td>
        </tr>
        <tr>
            <td>Foto: </td>
            <td>
                @Html.TextBoxFor(m => m.Foto, new {type = "file"})
                @Html.ValidationMessage("Foto")
            </td>
        </tr>
        <tr>
            <td>Prezzo: </td>
            <td>
                @Html.TextBoxFor(m => m.Prezzo,new {type="number"})
                @Html.ValidationMessage("Prezzo")
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit"/></td>
        </tr>
    </table>
}
